  = f.input_field :email, class: 'form-control', required: true, placeholder: 'E-mail', style: 'margin: 0 0 2px;'
  %div.input-group
    = f.input_field :password, class: 'form-control', required: true, placeholder: 'Password'
    %span.input-group-btn
      %input.btn.btn-primary{type: 'submit', value: 'Sign In'}
