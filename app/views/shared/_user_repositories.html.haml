.panel.panel-default
  .panel-heading
    %h3.panel-title= current_user.first_name + "'s Repositories"

  .panel-body
    %ul.no-bullet
      - current_user.accessible_repositories.each do |repository|
        %li= fancy_link repository

- if user_has_deleted_repositories?
  .panel.panel-default
    .panel-heading
      %h3.panel-title= current_user.first_name + "'s deleted Repositories"

    .panel-body
      %ul.no-bullet
        - current_user.owned_deleted_repositories.each do |repository|
          %li= fancy_link repository
