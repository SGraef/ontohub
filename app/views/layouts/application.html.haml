!!! 5
%html

  %head
    %title #{page_title} Â· #{Settings.name}

    %meta{charset: 'utf-8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}

    = stylesheet_link_tag 'application', media: 'all'
    = csrf_meta_tags

  %body
    = render partial: '/shared/navbar'

    %main#content
      .container
        .row.flash-messages
          = flash_messages
        .row
          - if cover_visible?
            = render partial: '/shared/cover'

          - if context_pane
            %div.col-md-8
              = yield
            - if user_signed_in?
              %div.col-md-4
                = render partial: '/shared/user_content'
            - else
              %div{style: 'position: absolute; top: 83px; right:15px; width: 303px;'}
                = render partial: '/shared/signin'
                %div.content-padding
                = render partial: '/shared/signup' 
          - else
            %div.col-md-12
              = yield

    = render partial: '/shared/footer'

    = javascript_include_tag 'application'
    = javascript_include_tag '/static/gwt/ontohub.nocache.js'
