= ontology_nav @ontology, :theorems

- if can? :write, parent.repository
  = link_to t('theorems.index.prove'), [*resource_chain, :proofs, :new], class: 'btn btn-primary'

= pagination do
  %table.sentences
    %thead
      %tr
        %th Name
        %th Text
        %th Proof Status
    %tbody
      = render partial: 'theorem', collection: collection
